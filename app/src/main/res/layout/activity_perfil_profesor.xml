<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".PerfilProfesorActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:textColor="#fff"
            android:text="Cerrar sesiÃ³n"
            android:id="@+id/btnCerrar">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar perfil"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:textColor="#fff"
            android:id="@+id/btnEliminar">
        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer nombre"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Primer Nombre"
        android:id="@+id/etNombre1"
        android:layout_marginHorizontal="10dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo nombre"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="segundo Nombre"
        android:id="@+id/etNombre2"
        android:layout_marginHorizontal="10dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer apellido"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Primer apellido"
        android:id="@+id/etApellido1"
        android:layout_marginHorizontal="10dp">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo apellido"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="segundo apellido"
        android:id="@+id/etApellido2"
        android:layout_marginHorizontal="10dp">
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Actualizar"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:id="@+id/btnActualizar">
    </Button>

</LinearLayout>