<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".InfoGrupoActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="InformaciÃ³n del grupo"
        android:textColor="#fff"
        android:gravity="center_horizontal">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="EDITAR GRUPO"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:id="@+id/btnEditar">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:text="ELIMINAR GRUPO"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:id="@+id/btnEliminar">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="RATING"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:id="@+id/btnRating">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:text="CANTIDAD DE ESTUDIANTES"
        android:id="@+id/btnCantidad">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/boton"
        android:textColor="#fff"
        android:text="INGRESOS DIA ESPECIFICO"
        android:id="@+id/btnDiaEspecifico">
    </Button>
</LinearLayout>